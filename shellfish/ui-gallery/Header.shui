require "shellfish/ui";

PageHeader {
    id: header

    property page: null
    property codeUrl: ""

    position: "global"
    marginLeft: page.marginLeft
    pageStack: page.pageStack

    into first Button {
        visible: pageStack.pages.length > 1 && page !== pageStack.pages[0]
        icon: "navigate_before"
        width: height
        height: header.height
        flat: true
        onClick: {
            header.pageStack.popPage();
        }
    }

    into second Button {
        visible: header.codeUrl !== ""
        icon: "file-text2"
        width: height
        height: header.height
        flat: true
        onClick: {
            header.pageStack.pushPage(__dirname + "/SourceCodePage.shui", {
                url: header.codeUrl
            });
        }
    }

}