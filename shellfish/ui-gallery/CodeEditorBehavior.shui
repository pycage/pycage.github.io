Object {

    property target: parent

    target.onKeyDown: (ev) =>
    {
        if (ev.key === "Tab")
        {
            const newCol = target.column + 4;
            const pos = newCol - (newCol % 4);
            const advance = pos - target.column;

            let s = "";
            for (let i = 0; i < advance; ++i)
            {
                s += " ";
            }

            const r = target.row;
            const c = target.column;
            target.insertAt(target.selectionStart, s);
            target.setCursor(r, c + advance);
            ev.accepted = true;
        }
        else if (ev.key === "Enter")
        {
            // find indentation of current line
            const r = target.row;
            const c = target.column;
            const line = target.text.substr(target.positionAt(r, 0), c);
            const indentation = line.length - line.trimStart().length;
            let s = "";
            for (let i = 0; i < indentation; ++i)
            {
                s += " ";
            }
            target.insertAt(target.selectionStart, "\n" + s);
            target.setCursor(r + 1, s.length);
            ev.accepted = true;
        }
        else if (ev.key === "Backspace")
        {
            const prefix = target.text.substr(positionAt(target.row, 0), target.column).trim();
            if (target.column > 0 && target.column % 4 === 0 && prefix.length === 0)
            {
                const r = target.row;
                const c = target.column;
                target.eraseAt(target.selectionStart - 4, 4);
                target.setCursor(r, c - 4);
                ev.accepted = true;
            }
        }
    }
}